{
  "name": "gabe.chrome-ext",
  "description": "Gabe's personal chrome extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "action": {},
  "commands": {
    "copy_tab_url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Copy Tab URL"
    },
    "open_pip": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Open Picture-in-Picture"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}
